{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "*.config.ts",
    "*.config.mjs"
  ],
  "exclude": ["**/fixtures"]
}
